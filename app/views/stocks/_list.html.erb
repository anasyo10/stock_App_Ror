<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Current Price</th>
            <% if @user.id == current_user.id %>
              <th>Action</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @user_stocks.each do |us| %>
         <tr>        
           <td><%= us.name %></td>
           <td><%=us.ticker %></td>
           <td><%=us.last_price %></td>
           <% if @user.id == current_user.id %>
             <td><%= link_to  "Delete", user_stock_path(us), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" %></td>
           <% end %>
         </tr>
        <%end%>   
    </tbody>
</table>